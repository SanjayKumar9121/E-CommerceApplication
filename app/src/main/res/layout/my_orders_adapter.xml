<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle_shape_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/myOrdersProductImgIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/menu"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/myOrdersProductNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Watermelon Peperomia"
        android:textSize="20sp"
        android:textColor="#002140"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/myOrdersProductImgIV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/myOrdersProductPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 350"
        android:textSize="20sp"
        android:textColor="#002140"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myOrdersProductNameTV"
        app:layout_constraintStart_toEndOf="@id/myOrdersProductImgIV"/>

</androidx.constraintlayout.widget.ConstraintLayout>